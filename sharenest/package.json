{
  "name": "sharenest-monorepo",
  "private": true,
  "packageManager": "pnpm@8.x.x",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "storybook": "turbo run storybook --filter=@sharenest/ui",
    "build-storybook": "turbo run build-storybook --filter=@sharenest/ui"
  },
  "devDependencies": {
    "@types/node": "^18.17.0",
    "eslint": "^8.45.0",
    "prettier": "^3.0.0",
    "turbo": "^1.10.0",
    "typescript": "^5.1.0"
  },
  "dependencies": {}
} 